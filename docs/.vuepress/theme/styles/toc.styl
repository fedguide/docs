.table-of-contents
  border-left 1px solid $--border-color-base
  position: fixed;
  right:0;
  padding-right: 0.5rem
  font-size .8rem
  width 10rem
  min-height 100%
  top: 0;
  padding-top: 6rem;
  background rgb(247, 247, 247)
  a
    color rgba(0,0,0,.5)
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding .5rem 0 .5rem 1rem
    &:hover
      color $--color-primary
  ul,li
    list-style-type none
    padding 0
    margin 0
  ul
    ul
     a
      padding-left 1.5rem
      font-size .65rem
  .badge
    vertical-align middle
.custom-ad
  width 10rem
  position: fixed;
  right .5rem
  img
    display block
    width 100%